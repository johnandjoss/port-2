<% content_for :title, "Joss Monster | Home" %>
<div class="container">
	<div class="row">
		<div class="col-lg-12">

			<h1 class="main-title">Joss Monster</h1>
			<div class="monster-img"><%= image_tag("monster5.png", :alt => "monster") %></div>
			<div class="monster-img"><%= image_tag("monster1.png", :alt => "monster") %></div>
			<div class="monster-img"><%= image_tag("monster2.png", :alt => "monster") %></div>
			<div class="monster-img"><%= image_tag("monster3.png", :alt => "monster") %></div>

			<h3 class="sub-title">Featured Skills</h3>
		</div><!-- end of col-12 -->
	</div><!-- end of row 1 -->
	<div class="row">

		<div class="col-lg-12 all-skills-div">
	  <% @skills.each do |skill| %>
	     <div class="col-md-3 skill-display"><img class="responsive center-block" src="http://placehold.it/200x200" alt="skill-picture"><%= link_to skill.name, skill_path(skill) %></div>
	  <% end %>
		<div class="hidden large">
			<%= render 'reference' %>
		</div>
	 <% if current_user && current_user.admin? %>
			<button class="links left-link"><%= link_to "Add a Skill", new_skill_path %></button>
		<% end %>

		<button class="links middle-link"><%= link_to "Blog", posts_path %></button>
		<button class="links right-link" id="all-skills"><%= link_to "All Skills", all_skills_path %></button>
		<button class="links all-link"><%= link_to "References", reference_skills_path, id: "reference_link", remote: true %></button>

		</div><!-- end of 2nd col 12 -->
	</div><!-- end of row 2 -->
</div><!-- end of main container -->
